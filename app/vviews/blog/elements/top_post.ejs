<% const folder_uploads = 'uploads/article/'; %>


<div class="trending-area fix">
    <div class="container">
        <div class="trending-main">
            <!-- Trending Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="trending-tittle">
                        <strong>Tin NÃ“NG</strong>
                        <!-- <p>Rem ipsum dolor sit amet, consectetur adipisicing elit.</p> -->
                        <div class="trending-animated">
                            <ul id="js-news" class="js-hidden"> 
                                <% itemsRandom.forEach( item =>{ %>
                                <li class="news-item"><%= item.name %></li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <!-- Trending Top -->
                    <div class="trending-top mb-30">
                        <div class="trend-top-img">
                            <img src="<%= folder_uploads + itemsSpecial[0].thumb %>" alt="<%= itemsSpecial[0].name %>">
                            <div class="trend-top-cap">
                                <span><a href="/tin-tuc/<%= itemsSpecial[0].category.slug %>"><%= itemsSpecial[0].category.name %></a></span>
                                <span>
                                        <%= formatDate(itemsSpecial[0].created.time) %>  
                                </span>
                                <h2><a href="/tin-tuc/<%= itemsSpecial[0].slug %>-a"><%= itemsSpecial[0].name %></a></h2>
                            </div>
                        </div>
                    </div>
                    <!-- Trending Bottom -->
                    <div class="trending-bottom">
                        <div class="row">
                        <% for(let i = 1; i < itemsSpecial.length; i++){  %> 
                            <div class="col-lg-4">
                                <div class="single-bottom mb-35">
                                    <div class="trend-bottom-img mb-30">
                                        <img src="<%= folder_uploads + itemsSpecial[i].thumb %>" alt="<%= itemsSpecial[i].name %>">
                                    </div>
                                    <div class="trend-bottom-cap">
                                        <span class="color2">
                                            <a href="/tin-tuc/<%= itemsSpecial[i].category.slug %>">
                                                <%= itemsSpecial[i].category.name %>
                                            </a>
                                        </span>
                                        <span class="color2">
                                            <%= formatDate(itemsSpecial[0].created.time) %>  
                                        </span>
                                        <h4><a href="/tin-tuc/<%= itemsSpecial[i].slug %>-a"><%= itemsSpecial[i].name %></a></h4>
                                    </div>
                                </div>
                            </div>
                        <% }%>
                        </div>
                    </div>
                </div>
                <!-- Riht content -->
                <div class="col-lg-4">
                    <% for(i = 1; i < itemsRandom.length; i++) { %>
                        <div class="trand-right-single d-flex">
                            <div class="trand-right-img">
                                <img src="<%= folder_uploads + itemsRandom[i].thumb %>" alt="" class="img_itemsRandom">
                            </div>
                            <div class="trand-right-cap">
                                <span class="color1">
                                    <a href="/tin-tuc/<%= itemsRandom[i].category.slug %>">
                                        <%= itemsRandom[i].category.name %>
                                    </a>    
                                </span>
                                <span class="color1">
                                        <%= formatDate(itemsRandom[i].created.time) %>  
                                </span>
                                <h4><a href="/tin-tuc/<%= itemsRandom[i].slug %>-a"><%= itemsRandom[i].name %></a></h4>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>