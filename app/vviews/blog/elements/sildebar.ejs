<% const folder_uploads = 'uploads/article/' %>

<div class="col-lg-4">
    <div class="blog_right_sidebar">
        <aside class="single_sidebar_widget search_widget">
            <form action="/search" method="GET">
                <input class="form-control mb-3" type="text" placeholder="Search" name="keyword" value='<%= params.keyword %>'>
                <input  class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn" type="submit" value="Search">
            </form>
        </aside>

        <aside class="single_sidebar_widget post_category_widget">
            <h4 class="widget_title">Category</h4>
            <ul class="list cat-list" id="countArticle">
            
            </ul>
        </aside>

        <aside class="single_sidebar_widget popular_post_widget">
            <h3 class="widget_title">Bài viết liên quan</h3>
                <% itemsRandom.forEach( item =>{ %>
                    <div class="media post_item">
                        <img src="<%= folder_uploads + item.thumb %>" alt="post" class="img_random_article">
                        <div class="media-body">
                            <a href="/article/<%= item._id %>">
                                <h3><%- formatSummary(item.name) %>...</h3>
                            </a>
                            <p><%- formatDate(item.created.time) %></p>
                        </div>
                    </div>
                <% }) %>
        </aside>

    </div>
</div>