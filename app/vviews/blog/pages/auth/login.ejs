<%
    const linkPrefix = systemConfig.prefixBlog + `/auth/login`;
%>

<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Đăng nhập</p>
        <% include ./../../elements/errors-login %>
        <% include ./../../elements/notify %>
        <form action="<%= linkPrefix %>" method="POST" role="form">
            <!-- USERNAME -->
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Tên đăng nhập" name="username" value="<%= item.username %>" >
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <!-- PASSWORD -->
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Mật khẩu" name="password" >
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <!-- TOKEN -->
            <button type="submit" class="btn btn-info btn-block">Đăng nhập</button>
            <!-- /.col -->
        </form>
    </div>
</div>